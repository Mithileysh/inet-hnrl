package inet.linklayer.pon;


simple HybridPonMac
{
    parameters:
        int queueSize;        // size of FIFO queue
    gates:
        output toMonitor;				// to monitor
		inout phy;						// to and from PON (i.e., splitter)
		in		ifIn[numUnisPerOnu];	// to users (through Ethernet I/F)
		out		ifOut[numUnisPerOnu];	// from users (through Ethernet I/F)
}
